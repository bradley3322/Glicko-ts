{
  "name": "glickots",
  "version": "1.0.0",
  "description": "A TypeScript implementation of the Glicko rating system.",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json && tsc -p tsconfig.esm.json",
    "build:cjs": "rimraf dist && tsc -p tsconfig.json",
    "build:esm": "rimraf dist/esm && tsc -p tsconfig.esm.json",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "glicko",
    "rating",
    "elo",
    "typescript",
    "ranking",
    "games",
    "sports"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bradley3322/GlickoTS.git"
  },
  "bugs": {
    "url": "https://github.com/bradley3322/GlickoTS/issues"
  },
  "homepage": "https://github.com/bradley3322/GlickoTS#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js", 
      "import": "./dist/esm/index.js", 
      "types": "./dist/index.d.ts"  
    }
  }

}